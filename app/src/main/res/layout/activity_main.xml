<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="#079527"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="250dp"
        android:src="@drawable/ic_baseline_search_24" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#079527"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50.5dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20.88dp"
            android:src="@drawable/ic_baseline_play_circle_outline_24" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginTop="20dp"
        android:background="#07079527"
        android:orientation="horizontal">

        <View
            android:layout_width="150dp"
            android:layout_height="86dp"
            android:layout_marginLeft="10dp"
            android:background="#22A128" />

        <View
            android:id="@+id/view1"
            android:layout_width="119dp"
            android:layout_height="18dp"
            android:layout_marginLeft="180dp"
            android:background="#C4C4C4" />

        <View
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="30dp"
            android:background="#C4C4C4" />

        <View
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="60dp"
            android:background="#C4C4C4" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"

        >

        <Button
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Try now"
            android:textColorHighlight="#0AE814"
            android:textSize="25dp" />


        <Button
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:text="INSTALL"
            android:textColorHighlight="#0AE814"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="68dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="68dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="263dp"
            android:layout_height="38dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="#C4C4C4" />

        <View
            android:layout_width="215dp"
            android:layout_height="33dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:background="#C4C4C4" />
    </LinearLayout>

</LinearLayout>